
upstream librecms_api { 
    server 127.0.0.1:3000;
}

server {
    listen 0.0.0.0:80;
    server_name librecms librecms;
    access_log /var/log/nginx/librecms.access.log;

    location / {
        index index.html;
        root /var/www/librecms;
        try_files $uri $uri/ /index.html =404;
    }

    location / {
    }

    underscores_in_headers on;
    location /api {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-NginX-Proxy true;
        add_header Pragma "no-cache"; # remove if you want to cache
        add_header Cache-Control "no-store, no-cache, must-revalidate, post-check=0, pre-check=0"; # remove if you want to cache
        proxy_pass http://librecms_api;
        proxy_redirect off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
